<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.Choise">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="402dp"
        android:layout_height="320dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/p3" />

    <Button
        android:id="@+id/loginonchoise"
        android:layout_width="217dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_btn2_intro"
        android:text="signin as user"
        android:textColor="#3F51B5"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/signupinchoise"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_btn2_intro"
        android:text="Signup as user"
        android:textColor="#3F51B5"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginonchoise" />

    <Button
        android:id="@+id/loginasadmin"
        android:layout_width="218dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_btn2_intro"
        android:text="signin as admin"
        android:textColor="#3F51B5"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupinchoise" />
</androidx.constraintlayout.widget.ConstraintLayout>